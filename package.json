        "@inertiajs/progress": "^0.2.7",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.2",
        "@vitejs/plugin-vue": "^3.0.0",
        "@vue/vue3-jest": "^28.0.1",
        "autoprefixer": "^10.4.7",
        "axios": "^0.21",
        "cross-env": "^7.0",
        "jest": "^28.1.3",
        "jest-environment-jsdom": "^28.1.3",
        "jquery": "^3.2",
        "laravel-vite-plugin": "^0.6.1",
        "lodash": "^4.17.21",
        "popper.js": "^1.12",
        "postcss": "^8.4.14",
        "resolve-url-loader": "^2.3.1",
        "sass": "^1.20.1",
        "sass-loader": "^8.0.0",
        "tailwindcss": "^3.1.0",
        "ts-jest": "^28.0.8",
        "vite": "^3.0.4",
